<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/app_bar_setings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main" >

        <Toolbar
            android:id="@+id/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/close_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Close"
                    android:layout_margin="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/update_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:layout_margin="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

        </Toolbar>

    </com.google.android.material.appbar.MaterialToolbar>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/setting_profile_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/profile"
            android:layout_below="@id/app_bar_setings"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/profile_image_change_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Image"
        android:layout_below="@+id/setting_profile_image"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/settings_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image_change_btn"
        android:hint="Phone Number"
        android:padding="10dp"
        android:background="@drawable/button2"
        android:layout_margin="16sp"/>
    <EditText
        android:id="@+id/settings_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_phone_number"
        android:hint="Username"
        android:padding="10dp"
        android:background="@drawable/button2"
        android:layout_margin="16sp"/>
    <EditText
        android:id="@+id/settings_addres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_username"
        android:hint="Addres"
        android:padding="10dp"
        android:background="@drawable/button2"
        android:layout_margin="16sp"/>




</RelativeLayout>