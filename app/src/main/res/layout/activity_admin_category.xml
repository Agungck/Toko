<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">
    
    <TextView
        android:id="@+id/txtv_add_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Add new Product"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textSize="26sp"/>


    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtv_add_product"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/paint_bucket"/>
        <ImageView
            android:id="@+id/img2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cement_bag"/>
        <ImageView
            android:id="@+id/img3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tools"/>
        <ImageView
            android:id="@+id/img4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/floor"/>
        <ImageView
            android:id="@+id/img5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/furniture"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/img6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/paint_bucket"/>
    <ImageView
        android:id="@+id/img7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/cement_bag"/>

        <ImageView
            android:id="@+id/img8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tools" />

        <ImageView
        android:id="@+id/img9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/floor"/>
    <ImageView
        android:id="@+id/img10"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/furniture"/>
    </LinearLayout>



</RelativeLayout>